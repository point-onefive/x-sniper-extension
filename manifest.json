{
  "manifest_version": 3,
  "name": "X Engagement Sniper",
  "version": "1.0.0",
  "description": "Automated engagement tool for X/Twitter",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "alarms",
    "clipboardWrite",
    "clipboardRead"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
